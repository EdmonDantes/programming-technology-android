<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="network_settings"
        app:title="@string/settings_category_network_settings_title">

        <EditTextPreference
            app:key="server_host"
            app:title="@string/settings_category_network_settings_host_setting_title"
            app:summary="@string/settings_category_network_settings_host_setting_summary"/>

        <EditTextPreference
            app:key="server_port"
            app:title="@string/settings_category_network_settings_port_setting_title"
            app:summary="@string/settings_category_network_settings_port_setting_summary"/>

    </PreferenceCategory>

</PreferenceScreen>